// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SavedQuote {
  id        String   @id @default(cuid())
  userId    String
  author    String
  text      String
  tags      String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([userId, text])
}
