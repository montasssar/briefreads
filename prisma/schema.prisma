generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}


model SavedQuote {
  id        String   @id @default(cuid())
  userId    String
  text      String
  author    String
  tags      String   // comma-separated tags
  createdAt DateTime @default(now())

  @@index([userId])
}
